<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<h3>Completed? <%= @task.completed %></h3>
<%= link_to "Edit task", edit_task_path(@task) %>
<hr>
<%= link_to 'Delete',
             task_path(@task),
                         method: :delete,
                         data: { confirm: 'Are you sure?' } %>
<hr>
<%= link_to "Go back", tasks_path  %>
